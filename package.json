{
    "name": "firestorm",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "dev": "vite dev --mode dev",
        "wasm:build": "cd crates/moe && ./build.sh --release",
        "wasm:link": "cp -r crates/moe/dist static/ && cd crates/moe/pkg && npm link && cd ../../.. && npm link moe",
        "wasm": "npm run wasm:build && npm run wasm:link",
        "postinstall": "npm run wasm",
        "build:dev": "vite build --mode dev",
        "build": "vite build",
        "preview:dev": "vite preview --mode dev",
        "preview": "vite preview",
        "test": "playwright test",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "test:unit": "vitest",
        "lint": "prettier --plugin-search-dir . --check . && eslint .",
        "format": "prettier --plugin-search-dir . --write .",
        "supabase:start": "supabase start",
        "supabase:db:reset": "supabase db reset && node supabase/waiter.js"
    },
    "devDependencies": {
        "@playwright/test": "^1.34.3",
        "@sveltejs/adapter-node": "^1.2.3",
        "@sveltejs/adapter-vercel": "^3.0.1",
        "@sveltejs/kit": "^1.20.4",
        "@types/web-push": "^3.3.2",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "@vitejs/plugin-basic-ssl": "^1.0.1",
        "autoprefixer": "^10.4.14",
        "eslint": "^8.28.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-svelte": "^2.32.2",
        "postcss": "^8.4.22",
        "prettier": "^2.8.0",
        "prettier-plugin-svelte": "^2.10.1",
        "svelte": "^4.0.0",
        "svelte-check": "^3.4.3",
        "tailwindcss": "^3.3.1",
        "tslib": "^2.4.1",
        "typescript": "^5.0.0",
        "vercel": "^31.0.1",
        "vite": "^4.4.1",
        "vite-plugin-top-level-await": "^1.3.0",
        "vite-plugin-wasm": "^3.2.2",
        "vitest": "^0.25.3"
    },
    "type": "module",
    "dependencies": {
        "@popperjs/core": "^2.11.7",
        "@supabase/auth-helpers-sveltekit": "^0.9.3",
        "@supabase/auth-ui-shared": "^0.1.6",
        "@supabase/auth-ui-svelte": "^0.2.2",
        "@supabase/supabase-js": "^2.20.0",
        "@trpc/client": "^10.33.0",
        "@trpc/server": "^10.33.0",
        "classnames": "^2.3.2",
        "date-fns": "^2.30.0",
        "flowbite": "^1.6.5",
        "flowbite-svelte": "^0.39.2",
        "postgres": "^3.3.5",
        "supabase": "^1.77.9",
        "svelte-material-icons": "github:hamza1311/svelte-material-icons#dep",
        "svelte-media-queries": "^1.5.4",
        "trpc-sveltekit": "^3.5.14",
        "ulidx": "^2.0.0",
        "web-push": "^3.6.3",
        "zod": "^3.21.4"
    }
}
